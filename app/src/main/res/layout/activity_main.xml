<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.mario.appalmacenamiento.MainActivity">

    <TextView
        android:id="@+id/tvBienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnSP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBienvenida"
        android:layout_marginTop="100dp"
        android:onClick="almacenamientoSP"
        android:text="ALMACENAMIENTO SP" />

    <Button
        android:id="@+id/btnAi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSP"
        android:layout_marginTop="10dp"
        android:onClick="almacenamientoIn"
        android:text="ALMACENAMIENTO INTERNO" />

    <Button
        android:id="@+id/btnAe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAi"
        android:layout_marginTop="10dp"
        android:onClick="almacenamientoEx"
        android:text="ALMAENAMIENTO EXTERNO" />

    <Button
        android:id="@+id/btnConsultarIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAe"
        android:layout_marginTop="10dp"
        android:onClick="consultarAI"
        android:text="CONSULTAR ALMACENAMIENO INTERNO" />

    <Button
        android:id="@+id/btnConsultarAEx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnConsultarIN"
        android:layout_marginTop="10dp"
        android:onClick="consultarAE"
        android:text="CONSULTAR ALMACENAMIENO EXTERNO" />


</RelativeLayout>
